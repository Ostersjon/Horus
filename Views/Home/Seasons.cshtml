                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
            </svg>
        </div>
    </div>
</div>

<h1 class="h1Center">الحلقات</h1>
<div class="EpisodesDivCont">
    @{
        var num = 1;
        foreach (var ep in @ViewBag.Episodes)
        {
            <a class="ALinkEPS" href="~/Home/Episode?Epsid=@ep.id&ep=@num">
                <p>@num الحلقة</p>
                <img src="~/images/@ep.Thumbnail" />
            </a>
            num += 1;
        }
    }
</div>

<script>

    let x = 0;
    let all = document.querySelectorAll("input[name='srate']");
    let findselected = () => {
        let selected = document.querySelector("input[name='srate']:checked").value;
        x = selected;
        console.log(selected);
    }
    all.forEach(rdo => {
        rdo.addEventListener('change', findselected);
    })
    var SRatingFunk = (id) => {
        if (x !== 0) {
            fetch('/Rating/Add?Type=Season&id=' + id + "&Rate=" + x, {
                method: 'POST',
            }).then(() => {
                setTimeout(location.reload(), 100)
            });
        }
    };

    let AddSWishFunk = () => {
        fetch("/WishLists/Add?Type=Season&id=" + @ViewBag.Season.id, {
            method: 'POST'
        }).then(() => {
            setTimeout(location.reload(), 100)
        });
    };

    let RemSWishFunk = () => {
        fetch("/WishLists/Delete?Type=Season&id=" + @ViewBag.Season.id, {
            method: 'DELETE'
        }).then(() => {
            setTimeout(location.reload(), 100)
        });
    };
</script>