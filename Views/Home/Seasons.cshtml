<div class="coverseassonsimg">
    <img src="~/images/@ViewBag.Media.Cover" />
    <a href="~/Home/Media?id=@ViewBag.Media.Id">Back To The Show</a>
</div>
<div class="MediaContanierPage">
    <div class="MediaInfoDivPage">
        <h2 class="seasonh2div">@ViewBag.Season.name</h2>
        <div class="aboutdivv">@ViewBag.Media.about</div>
        <div class="avratediv">
            <div class="prodimg">
                <img src="~/images/@ViewBag.Media.productions.photo" />
            </div>
        </div>
        <div class="flexdivv"><div>@ViewBag.Media.Language</div> <p>اللغة</p></div>
        <div class="flexdivv"> <div>@ViewBag.Media.MovieCountry</div> <p>البلد</p></div>
        <div class="flexdivv"> <div>@ViewBag.Media.Year</div> <p>سنة الانتاج </p></div>
